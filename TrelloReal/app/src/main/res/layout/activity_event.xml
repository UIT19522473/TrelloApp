<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event.EventActivity"
    android:orientation="vertical"
    android:background="#75E4E4D4"
    android:weightSum="18">

        <TextView
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:text="name event"
            android:textSize="25sp"
            android:id="@+id/txtTitleEventActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:hint="mô tả"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_baseline_timer_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:text="Ngày bắt đầu..."
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:text="Ngày kết thúc..."
            android:layout_marginRight="5dp"
            android:layout_marginLeft="25dp"
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_margin="5dp"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Thêm ảnh"
                android:layout_weight="19"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:background="@drawable/ic_baseline_add_24"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_margin="5dp"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Thêm file dpf"
                android:layout_weight="19"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:background="@drawable/ic_baseline_add_24"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2" />

    <LinearLayout
        android:background="@color/white"
        android:layout_margin="5dp"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Thêm link"
            android:layout_weight="19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageButton
            android:background="@drawable/ic_baseline_add_24"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>


    <LinearLayout
        android:background="@color/white"
        android:layout_margin="5dp"
        android:weightSum="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Danh sách công việc"
            android:layout_weight="19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageButton
            android:background="@drawable/ic_baseline_add_24"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>